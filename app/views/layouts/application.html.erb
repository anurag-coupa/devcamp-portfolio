<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto+Slab" rel="stylesheet">

    <meta name="keywords" content= "<%= @seo_keywords %>" />

    <%= favicon_link_tag 'favicons/other_favicon.ico' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
  </head>

  <body>
    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">

          <%= video_tag('HardDrivePhotojpeg.ogv', id: 'background', autoplay: true, loop: true, muted: true, poster: '613335.jpg') %>

          <%= render "shared/application_nav" %>
          
          <%= yield %>

          <%= render "shared/application_footer" %>

          <%= alerts %>
        </div>
      </div>
    </div>
  </body>
</html>
