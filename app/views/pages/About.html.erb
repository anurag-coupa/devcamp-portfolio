<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "IMG_20190723_132039.jpg", width: 300, alt: "Profile Image", class: "profile-img" %>

        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%"
                ></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-8">
        <p>My name is Anurag Bhaskar and I am an Engineer graduate. This is my new beginning, starting my career as a software engineer</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Univo
            </div>
            <div class="card card-block">
              Coupa
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-block">
              DPS
            </div>
            <div class="card card-block">
              BBPS
            </div>
            <div class="card card-block">
              IIT
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>